            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/result"
            android:textSize="45sp" android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/txt" android:layout_marginEnd="86dp"
            android:layout_marginRight="86dp" app:layout_constraintEnd_toEndOf="@+id/txt"/>

