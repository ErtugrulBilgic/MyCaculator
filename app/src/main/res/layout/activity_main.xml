    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonMns"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/buttonBspc" app:layout_constraintStart_toEndOf="@+id/button9"
