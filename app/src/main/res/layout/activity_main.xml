            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonDvd"
            app:layout_constraintEnd_toEndOf="@+id/button8" app:layout_constraintStart_toStartOf="@+id/button8"
            android:textSize="25sp" app:layout_constraintTop_toTopOf="@+id/buttonClr"/>
    <Button
            android:text="←"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonBspc"
            app:layout_constraintStart_toEndOf="@+id/buttonMLt" android:layout_marginLeft="4dp"
